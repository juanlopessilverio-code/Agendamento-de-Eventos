@model EventosTeste.Models.Evento
@{
    ViewData["Title"] = "Excluir Evento";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        min-height: 100vh;
        color: #333;
        padding: 2rem 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem;
        position: relative;
    }

    .btn-back {
        position: absolute;
        top: 0;
        left: 2rem;
        padding: 0.75rem 1.5rem;
        background: white;
        color: #1e3c72;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3);
        }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

        .page-header h1 {
            font-size: 2.5rem;
            color: white;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .page-header p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
        }

    .delete-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        position: relative;
    }

        .delete-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #dc3545 0%, #c82333 100%);
            border-radius: 20px 20px 0 0;
        }

    .delete-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        font-size: 2rem;
        color: white;
        box-shadow: 0 8px 20px rgba(220, 53, 69, 0.5);
    }

    .warning-box {
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border-left: 5px solid #ffc107;
        padding: 1.5rem;
        border-radius: 15px;
        margin-bottom: 2rem;
    }

        .warning-box h3 {
            color: #856404;
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .warning-box p {
            color: #856404;
            margin: 0;
            line-height: 1.6;
        }

    .event-info {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
    }

        .event-info h3 {
            color: #1e3c72;
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

    .info-row {
        display: flex;
        padding: 1rem;
        border-bottom: 1px solid #e0e0e0;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 600;
        color: #666;
        min-width: 150px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .info-label i {
            color: #1e3c72;
        }

    .info-value {
        color: #333;
        flex: 1;
    }

    .actions-section {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 1px solid #e0e0e0;
    }

    .btn {
        padding: 1rem 2.5rem;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: center;
        flex: 1;
    }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(220, 53, 69, 0.6);
        }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

    footer {
        background: rgba(0, 0, 0, 0.2);
        color: white;
        text-align: center;
        padding: 2rem;
        margin-top: 4rem;
    }
</style>

<div class="container">
    <a asp-action="Index" class="btn-back">
        <i class="fas fa-arrow-left"></i>
        Voltar
    </a>

    <div class="page-header">
        <h1><i class="fas fa-exclamation-triangle"></i> Excluir Evento</h1>
        <p>Confirme a exclusão do evento</p>
    </div>

    <div class="delete-card">
        <div class="delete-icon">
            <i class="fas fa-trash-alt"></i>
        </div>

        <div class="warning-box">
            <h3>
                <i class="fas fa-exclamation-circle"></i>
                Atenção!
            </h3>
            <p>
                Você está prestes a excluir este evento permanentemente.
                Esta ação não pode ser desfeita. Por favor, revise as informações abaixo antes de confirmar.
            </p>
        </div>

        <div class="event-info">
            <h3>Informações do Evento</h3>

            <div class="info-row">
                <div class="info-label">
                    <i class="fas fa-heading"></i>
                    Nome:
                </div>
                <div class="info-value">
                    @Html.DisplayFor(model => model.Nome_Evento)
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Descricao))
            {
                <div class="info-row">
                    <div class="info-label">
                        <i class="fas fa-align-left"></i>
                        Descrição:
                    </div>
                    <div class="info-value">
                        @Html.DisplayFor(model => model.Descricao)
                    </div>
                </div>
            }

            <div class="info-row">
                <div class="info-label">
                    <i class="far fa-calendar"></i>
                    Data Inicial:
                </div>
                <div class="info-value">
                    @Model.Data_Inicial.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            <div class="info-row">
                <div class="info-label">
                    <i class="far fa-calendar-check"></i>
                    Data Final:
                </div>
                <div class="info-value">
                    @Model.Data_Final.ToString("dd/MM/yyyy HH:mm")
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.NomeLocal))
            {
                <div class="info-row">
                    <div class="info-label">
                        <i class="fas fa-map-marker-alt"></i>
                        Local:
                    </div>
                    <div class="info-value">
                        @Model.NomeLocal
                    </div>
                </div>
            }
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdEvento" />

            <div class="actions-section">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-check"></i>
                    Confirmar Exclusão
                </button>

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

<footer>
    © 2025 - Sistema de Agendamento de Eventos
</footer> @*teste*@