@model EventosTeste.Models.Local
@{
    ViewData["Title"] = "Detalhes do Local";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        min-height: 100vh;
        color: #333;
        padding: 2rem 0;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 2rem;
        position: relative;
    }

    .btn-back {
        position: absolute;
        top: 0;
        left: 2rem;
        padding: 0.75rem 1.5rem;
        background: white;
        color: #1e3c72;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3);
        }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

        .page-header h1 {
            font-size: 2.5rem;
            color: white;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .page-header p {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1rem;
        }

    .details-card {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        position: relative;
    }

        .details-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #1e3c72 0%, #2a5298 100%);
            border-radius: 20px 20px 0 0;
        }

    .details-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        font-size: 1.5rem;
        color: white;
        box-shadow: 0 8px 20px rgba(30, 60, 114, 0.4);
    }

    .local-title {
        text-align: center;
        font-size: 2rem;
        color: #1e3c72;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .local-status {
        text-align: center;
        margin-bottom: 2rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.9rem;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .detail-group {
        background: #f8f9fa;
        padding: 1.5rem;
        border-radius: 15px;
        border-left: 4px solid #1e3c72;
    }

    .detail-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: #1e3c72;
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
    }

        .detail-label i {
            font-size: 1.2rem;
        }

    .detail-value {
        color: #333;
        font-size: 1.1rem;
        padding-left: 1.8rem;
        word-wrap: break-word;
    }

    .map-section {
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        text-align: center;
    }

        .map-section h3 {
            color: #1e3c72;
            font-size: 1.3rem;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

    .map-placeholder {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        height: 300px;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        color: #1565C0;
        font-size: 3rem;
    }

        .map-placeholder p {
            font-size: 1rem;
            font-weight: 600;
        }

    .info-box {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        padding: 1.5rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        border-left: 5px solid #2196F3;
    }

        .info-box i {
            color: #1976D2;
            font-size: 1.3rem;
            margin-right: 0.5rem;
        }

        .info-box p {
            margin: 0;
            color: #1565C0;
            font-weight: 500;
        }

    .actions-section {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        padding-top: 2rem;
        border-top: 1px solid #e0e0e0;
        flex-wrap: wrap;
    }

    .btn {
        padding: 1rem 2.5rem;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: center;
    }

    .btn-primary {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        flex: 1;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(30, 60, 114, 0.6);
        }

    .btn-warning {
        background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
        color: white;
        flex: 1;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(255, 193, 7, 0.6);
        }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        flex: 1;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(220, 53, 69, 0.6);
        }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

    footer {
        background: rgba(0, 0, 0, 0.2);
        color: white;
        text-align: center;
        padding: 2rem;
        margin-top: 4rem;
    }

    .empty-value {
        color: #999;
        font-style: italic;
    }

    .cep-display {
        font-family: 'Courier New', monospace;
        font-size: 1.2rem;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .stats-mini {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .stat-mini {
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .stat-mini-number {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e3c72;
    }

    .stat-mini-label {
        font-size: 0.85rem;
        color: #666;
        margin-top: 0.25rem;
    }
</style>

<div class="container">
    <a asp-action="Index" class="btn-back">
        <i class="fas fa-arrow-left"></i>
        Voltar
    </a>

    <div class="page-header">
        <h1><i class="fas fa-map-marked-alt"></i> Detalhes do Local</h1>
        <p>Informações completas sobre o local cadastrado</p>
    </div>

    <div class="details-card">
        <div class="details-icon">
            <i class="fas fa-building"></i>
        </div>

        <h2 class="local-title">@Html.DisplayFor(model => model.Nome)</h2>

        <div class="local-status">
            <span class="badge">
                <i class="fas fa-check-circle" style="font-size: 0.8rem;"></i> Local Ativo
            </span>
        </div>

        <div class="stats-mini">
            <div class="stat-mini">
                <div class="stat-mini-number">0</div>
                <div class="stat-mini-label">Eventos Agendados</div>
            </div>
            <div class="stat-mini">
                <div class="stat-mini-number">0</div>
                <div class="stat-mini-label">Eventos Realizados</div>
            </div>
            <div class="stat-mini">
                <div class="stat-mini-number">-</div>
                <div class="stat-mini-label">Capacidade</div>
            </div>
        </div>

        <div class="details-grid" style="margin-top: 2rem;">
            <div class="detail-group">
                <div class="detail-label">
                    <i class="fas fa-signature"></i>
                    Nome do Local
                </div>
                <div class="detail-value">
                    @if (!string.IsNullOrWhiteSpace(Model.Nome))
                    {
                        @Html.DisplayFor(model => model.Nome)
                    }
                    else
                    {
                        <span class="empty-value">Não informado</span>
                    }
                </div>
            </div>

            <div class="detail-group">
                <div class="detail-label">
                    <i class="fas fa-map-pin"></i>
                    CEP
                </div>
                <div class="detail-value">
                    @if (!string.IsNullOrWhiteSpace(Model.Cep))
                    {
                        <span class="cep-display">@Html.DisplayFor(model => model.Cep)</span>
                    }
                    else
                    {
                        <span class="empty-value">Não informado</span>
                    }
                </div>
            </div>

            <div class="detail-group">
                <div class="detail-label">
                    <i class="fas fa-hashtag"></i>
                    ID do Local
                </div>
                <div class="detail-value">
                    #@Html.DisplayFor(model => model.IdLocal)
                </div>
            </div>

            <div class="detail-group">
                <div class="detail-label">
                    <i class="fas fa-calendar-plus"></i>
                    Data de Cadastro
                </div>
                <div class="detail-value">
                    @DateTime.Now.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Cep))
        {
            <div class="map-section">
                <h3>
                    <i class="fas fa-map-marked-alt"></i>
                    Localização
                </h3>
                <div class="map-placeholder">
                    <i class="fas fa-map-marker-alt"></i>
                    <p>CEP: @Model.Cep</p>
                    <small style="font-size: 0.9rem; opacity: 0.8;">Visualização de mapa disponível em breve</small>
                </div>
            </div>
        }

        <div class="info-box">
            <i class="fas fa-info-circle"></i>
            <p>Este local está cadastrado e disponível para agendamento de eventos. Você pode editar as informações ou excluir o local usando os botões abaixo.</p>
        </div>

        <div class="actions-section">
            <a asp-action="Edit" asp-route-id="@Model.IdLocal" class="btn btn-warning">
                <i class="fas fa-edit"></i>
                Editar Local
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-list"></i>
                Lista de Locais
            </a>

            <form asp-action="Delete" asp-route-id="@Model.IdLocal" method="post" style="flex: 1; display: contents;"
                  onsubmit="return confirm('Tem certeza que deseja excluir este local? Esta ação não pode ser desfeita.');">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i>
                    Excluir Local
                </button>
            </form>
        </div>
    </div>
</div>

<footer>
    © 2025 - Sistema de Agendamento de Eventos
</footer>